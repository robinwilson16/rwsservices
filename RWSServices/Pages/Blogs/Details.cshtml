@page "{id:int}/{url?}"
@model RWSServices.Pages.Blogs.DetailsModel

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Blog.BlogTitle);
}

<<div class="container">
    <div class="row">
        <div class="col">
            <h2>@Html.DisplayFor(model => model.Blog.BlogTitle)</h2>

            <p class="font-weight-light">
                Posted on @Html.Raw(Model.Blog.CreatedDate.ToString("dd MMM yyyy")) by @Html.DisplayFor(model => model.Blog.CreatedBy)
            </p>

            <img src="~/images/blog/@Html.DisplayFor(model => model.Blog.BlogImage)" class="img-fluid" alt="@Html.DisplayFor(model => model.Blog.BlogTitle)" />

            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Blog.BlogContent)
                    </dt>
                    <dd>
                        @Html.Raw(Model.Blog.BlogContent)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Blog.UpdatedDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Blog.UpdatedDate)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Blog.UpdatedBy)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Blog.UpdatedBy)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-page="./Edit" asp-route-id="@Model.Blog.BlogID">Edit</a> |
                <a asp-page="./Index">Back to List</a>
            </div>
        </div>
    </div>
</div>